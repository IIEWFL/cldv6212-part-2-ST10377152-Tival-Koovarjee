@model ABC_Retail.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

<h3>Are you sure you want to delete this customer?</h3>

<div>
    <div>
        @if (!string.IsNullOrEmpty(Model.PhotoUrl))
        {
            <img src="@Model.PhotoUrl" alt="@Model.FirstName" style="max-width:200px;" />
        }
    </div>
    <dl class="row">

        <dt class="col-sm-2">FirstName</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">LastName</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">PhoneNumber</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
